---
import { BriefIcon } from "./icons/BriefIcon.tsx";
import { PencilIcon } from "./icons/PencilIcon.tsx";
import { HomeIcon } from "./icons/HomeIcon.tsx";
---

<header class="Header">
  <div class="Header__Container">
    <nav>
      <ul class="Header__List">
        <li>
          <a href="/" class="Header__LinkText"
            ><HomeIcon client:load /><span class="FadeInBorderText">Home</span
            ></a
          >
        </li>
        <li>
          <a href="/talks" class="Header__LinkText"
            ><BriefIcon client:load /><span class="FadeInBorderText">Talks</span
            ></a
          >
        </li>
        <li>
          <a href="/posts" class="Header__LinkText"
            ><PencilIcon client:load /><span class="FadeInBorderText"
              >Posts</span
            ></a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .Header {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #3f3f46;
    height: 72px;
  }
  .Header__Container {
    display: flex;
    align-items: center;
    font-size: 1.5rem;
    box-sizing: border-box;
    margin-left: auto;
    margin-right: auto;
  }

  .Header__List {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    list-style: none;
    padding: 0;
    li {
      margin-right: 1.5rem;
    }
  }

  .Header__LinkText {
    font-size: 1.2rem;
    font-weight: 800;
    text-decoration-line: none;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    svg {
      margin-right: 4px;
    }
  }

  @media (max-width: 768px) {
    .Header {
      height: 56px;
    }
  }

  .FadeInBorderText {
    padding-top: 2px;
  }

  .FadeInBorderText::after {
    content: "";
    display: block;
    width: 0;
    height: 2px;
    background: #f4f4f5;
    transition: width 0.3s;
  }

  .FadeInBorderText:hover::after,
  .FadeInBorderText:focus::after {
    width: 100%;
  }
</style>
